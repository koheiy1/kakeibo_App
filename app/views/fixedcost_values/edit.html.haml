.wrapper
  = render "post/header"
  - breadcrumb :fixedcost_value_edit
  = breadcrumbs pretext: "",separator: "&rsaquo;"
#{current_user.name}さんのページ
%h2 固定費科目データ修正
= form_for @fixedcost_value do |form|
  %table
    %tr
      %th 登録日
      %th 名称
      %th 金額
      %th 補足
    %tr
      %td= form.date_select :year_month,                  |
          start_year: 2010, end_year: Time.current.year, |
          use_month_numbers: true, discard_day: true     |
      %th= @fixedcost.name
      %td= form.text_field :value
      %td= form.text_field :supplement
  %div= form.submit